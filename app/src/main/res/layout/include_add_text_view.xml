<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_edit_text"
            android:layout_width="430dp"
            android:layout_height="69dp"
            android:background="@drawable/bg_gray_rounded_corners_41"
            android:paddingLeft="50dp"
            android:paddingRight="20dp"
            android:drawableRight="@mipmap/ic_pen_click"
            android:paddingTop="14.5dp"
            android:paddingBottom="14.5dp"
            android:text="点击输入文字…"
            android:textColor="@color/text_colors_343338"
            android:textSize="25dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_select_font"
            android:layout_width="430dp"
            android:layout_height="69dp"
            android:background="@drawable/bg_gray_rounded_corners_41"
            android:paddingLeft="50dp"
            android:paddingTop="14.5dp"
            android:paddingRight="20dp"
            android:drawableRight="@mipmap/ic_drop_down_default"
            android:paddingBottom="14.5dp"
            android:text="微软雅黑"
            android:textColor="@color/text_colors_343338"
            android:textSize="25dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_color"
        android:layout_width="match_parent"
        android:layout_height="99dp" />

</LinearLayout>