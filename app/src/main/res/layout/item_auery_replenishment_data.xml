<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="900dp"
        android:layout_height="325dp"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="@color/bg_colors_ffffff"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="66dp"
                    android:gravity="center"
                    android:text="款式"
                    android:textColor="@color/text_colors_343338"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="尺码"
                    android:textColor="@color/text_colors_343338"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="66dp"
                    android:gravity="center"
                    android:text="补货"
                    android:textColor="@color/text_colors_343338"
                    android:textSize="30dp" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/line_colors_f5f5f5"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <cm.offline.tv.ui.view.SizeReplenishmentView
                    android:id="@+id/view_size_replenishment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>