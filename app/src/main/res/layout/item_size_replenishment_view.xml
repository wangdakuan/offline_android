<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_colors_ffffff"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="185dp"
        android:layout_height="75dp"
        android:layout_marginLeft="66dp"
        android:gravity="center"
        android:text="男款.男"
        android:textColor="@color/text_colors_99343338"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="L"
        android:textColor="@color/text_colors_99343338"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="75dp"
        android:layout_gravity="right"
        android:layout_marginRight="66dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_reduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_number_reduce_default" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/text_colors_343338"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_number_add_default" />
    </LinearLayout>
</FrameLayout>