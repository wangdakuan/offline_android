<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/btn_click_close" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_choose"
        android:layout_width="810dp"
        android:layout_height="449dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="25dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/bg_colors_ffffff"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="选择尺码"
                android:textColor="@color/text_colors_343338"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67dp"
                android:layout_marginRight="67dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_design_color"
                    android:layout_width="430dp"
                    android:layout_height="70dp"
                    android:background="@drawable/btn_gray_rounded_corners_25"
                    android:drawableRight="@mipmap/ic_drop_down_default"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:paddingRight="20dp"
                    android:text="黑体"
                    android:textColor="@color/text_colors_343338"
                    android:textSize="30dp" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_number_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/btn_number_reduce_default" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:text="1"
                        android:textColor="@color/text_colors_343338"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/btn_number_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/btn_number_add_default" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67dp"
                android:layout_marginRight="67dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_XS"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/btn_white_or_blue_selector"
                        android:gravity="center"
                        android:text="XS"
                        android:textColor="@color/text_white_or_black_selector"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/btn_S"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/btn_white_or_blue_selector"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@color/text_white_or_black_selector"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/btn_M"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/btn_white_or_blue_selector"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/text_white_or_black_selector"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/btn_L"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/btn_white_or_blue_selector"
                        android:gravity="center"
                        android:text="L"
                        android:textColor="@color/text_white_or_black_selector"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/btn_XL"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/btn_white_or_blue_selector"
                        android:gravity="center"
                        android:text="XL"
                        android:textColor="@color/text_white_or_black_selector"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/btn_size_chart"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="尺码表"
                    android:textColor="@color/text_colors_0175F4"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/btn_window_gradient_click2"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="支付"
            android:textColor="@color/text_colors_ffffff"
            android:textSize="30dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view_size_chart"
        android:layout_width="1200dp"
        android:layout_height="400dp"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        android:layout_marginBottom="25dp"
        app:cardBackgroundColor="@color/bg_colors_ffffff"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:layout_marginBottom="22dp"
                    android:text="尺码指南"
                    android:textColor="@color/text_colors_343338"
                    android:textSize="30dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_size_guide"
                    android:layout_width="wrap_content"
                    android:background="@color/bg_colors_f5f5f5"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="60dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:layout_marginBottom="22dp"
                    android:text="建议参考"
                    android:textColor="@color/text_colors_343338"
                    android:textSize="30dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_reference"
                    android:background="@color/bg_colors_f5f5f5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>