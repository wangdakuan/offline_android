<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="810dp"
        android:layout_height="449dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        app:cardBackgroundColor="@color/bg_colors_ffffff"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="选择尺码"
                android:textColor="@color/text_colors_343338"
                android:textSize="30dp" />

            <TextView
                android:layout_width="430dp"
                android:layout_height="70dp"
                android:layout_marginLeft="67dp"
                android:background="@drawable/btn_gray_rounded_corners"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="黑体"
                android:textColor="@color/text_colors_343338"
                android:textSize="30dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="80dp"

                android:background="@drawable/bg_gray_rounded_corners_15" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>